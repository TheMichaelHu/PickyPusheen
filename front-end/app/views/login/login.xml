<Page loaded="loaded">
    <StackLayout orientation="vertical">
        <Image src="~/images/pusheen.png" stretch="none" horizontalAlignment="center" />

        <TextField id="username" text="{{ username }}" hint="Username" autocorrect="false" autocapitalizationType="none" />
        <TextField id="password" text="{{ password }}" hint="Password" secure="true"/>

        <Button text="Sign in" tap="signIn"/>
        <Button text="Register for account" class="link" tap="register"/>
    </StackLayout>
</Page>
